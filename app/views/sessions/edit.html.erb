<h1> Edit this session </h1>

<%= @session.user.name %>

<%= form_for([@session.user, @session]) do |form| %>
  <div class="field">
    <%= form.label :activity %>
    <%= form.text_field :activity %>
  </div>
  <div class="field">
    <%= form.label :distance %>
    <%= form.text_field :distance %> 
  </div>
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  <div class="action">
    <%= form.submit 'Update session' %>
  </div>

<% end %>